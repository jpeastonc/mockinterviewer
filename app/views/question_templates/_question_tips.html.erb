<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Tips

    <a data-toggle="collapse" href="#question_tips_new_form">
      Add question tip
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @question.tips.each do |question_tip| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/question_tips/<%= question_tip.id %>">
          <%= question_tip.question_id %>
        </a>

        <a href="/delete_question_tip_from_question/<%= question_tip.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="question_tips_new_form">
        <%= render partial: "question_templates/question_tips_new_form" %>
      </div>
    </div>

  </ul>
</div>

<form action="/create_question_tip_from_question" method="post">

  <input type="hidden" name="question_id" value="<%= @question.id %>">

  <div class="form-group">
    <label for="content">
      Content
    </label>

    <input type="text" id="content" name="content" class="form-control" value="<%= @question_tip.content %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create question tip
  </button>
</form>

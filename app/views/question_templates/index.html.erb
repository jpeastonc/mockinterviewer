<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All questions
    </h1>

    <a href="/questions/new" class="btn btn-block btn-outline-secondary">
      Add a new question
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "question_templates/questions_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Question
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @questions.each do |question| %>
      <tr>
        <td>
          <%= question.id %>
        </td>

        <td>
          <%= question.question %>
        </td>

        <td>
          <%= time_ago_in_words(question.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(question.updated_at) %> ago
        </td>

        <td>
          <a href="/questions/<%= question.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @questions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

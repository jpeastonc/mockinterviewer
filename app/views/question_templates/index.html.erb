<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All questions
    </h1>

    <a href="/questions/new" class="btn btn-block btn-outline-secondary">
      Add a new question
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Question
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @questions.each do |question| %>
      <tr>
        <!-- Display question.id start -->
        <td>
          <%= question.id %>
        </td>
        <!-- Display question.id end -->

        <!-- Display question.question start -->
        <td>
          <%= question.question %>
        </td>
        <!-- Display question.question end -->

        <!-- Display question.created_at start -->
        <td>
          <%= time_ago_in_words(question.created_at) %> ago
        </td>
        <!-- Display question.created_at end -->

        <!-- Display question.updated_at start -->
        <td>
          <%= time_ago_in_words(question.updated_at) %> ago
        </td>
        <!-- Display question.updated_at end -->

        <td>
          <a href="/questions/<%= question.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @questions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

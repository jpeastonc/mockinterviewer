<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Question #<%= @question.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/questions" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/questions/<%= @question.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit question
        </a>
      </div>

      <div class="col">
        <a href="/delete_question/<%= @question.id %>" class="btn btn-block btn-outline-secondary">
          Delete question
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Question
      </dt>
      <dd>
        <%= @question.question %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@question.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@question.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "question_templates/question_question_categories" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "question_templates/question_tips" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "question_templates/question_user_questions" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "question_templates/question_reflexion_questions" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "question_templates/question_categories" %>
  </div>
</div>

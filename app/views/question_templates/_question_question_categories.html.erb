<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Question Categories

    <a data-toggle="collapse" href="#question_question_categories_new_form">
      Add question category
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @question.question_categories.each do |question_category| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/question_categories/<%= question_category.id %>">
          <%= question_category.question_id %>
        </a>

        <a href="/delete_question_category_from_question/<%= question_category.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="question_question_categories_new_form">
        <%= render partial: "question_templates/question_question_categories_new_form" %>
      </div>
    </div>

  </ul>
</div>

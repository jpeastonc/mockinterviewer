<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    User Questions

    <a data-toggle="collapse" href="#question_user_questions_new_form">
      Add user question
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @question.user_questions.each do |user_question| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/user_questions/<%= user_question.id %>">
          <%= user_question.user_id %>
        </a>

        <a href="/delete_user_question_from_question/<%= user_question.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="question_user_questions_new_form">
        <%= render partial: "question_templates/question_user_questions_new_form" %>
      </div>
    </div>

  </ul>
</div>

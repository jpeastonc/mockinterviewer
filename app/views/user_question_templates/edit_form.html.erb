<h1>
  Edit user question #<%= @user_question.id %>
</h1>

<hr>

<!-- Form user_question start -->
<form action="/update_user_question/<%= @user_question.id %>" method="post">
<!-- Form user_question end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @user_question.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for question_id start -->
  <div class="form-group">
    <label for="question_id">
      Question
    </label>

    <!-- Input for question_id start -->
    <input type="text" id="question_id" name="question_id" class="form-control" value="<%= @user_question.question_id %>">
    <!-- Input for question_id end -->
  </div>
  <!-- Label and input for question_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update user question
  </button>
</form>

<hr>

<a href="/user_questions">
  Go back
</a>

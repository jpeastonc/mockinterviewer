<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Question
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @user_questions.each do |user_question| %>
      <tr>
        <!-- Display user_question.id start -->
        <td>
          <%= user_question.id %>
        </td>
        <!-- Display user_question.id end -->

        <!-- Display user_question.user_id start -->
        <td>
          <%= user_question.user_id %>
        </td>
        <!-- Display user_question.user_id end -->

        <!-- Display user_question.question_id start -->
        <td>
          <%= user_question.question_id %>
        </td>
        <!-- Display user_question.question_id end -->

        <!-- Display user_question.created_at start -->
        <td>
          <%= time_ago_in_words(user_question.created_at) %> ago
        </td>
        <!-- Display user_question.created_at end -->

        <!-- Display user_question.updated_at start -->
        <td>
          <%= time_ago_in_words(user_question.updated_at) %> ago
        </td>
        <!-- Display user_question.updated_at end -->

        <td>
          <a href="/user_questions/<%= user_question.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<h1>
  Add a new user question
</h1>


<hr>

<form action="/create_user_question" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @user_question.user_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="question_id">
      Question
    </label>

    <%= select_tag(:question_id, options_from_collection_for_select(Question.all, :id, :question, @user_question.question_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create user question
  </button>
</form>

<hr>

<a href="/user_questions">
  Go back
</a>

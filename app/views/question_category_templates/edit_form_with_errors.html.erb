<% if @question_category.errors.any? %>
  <% @question_category.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit question category #<%= @question_category.id %>
</h1>

<hr>

<form action="/update_question_category/<%= @question_category.id %>" method="post">

  <div class="form-group">
    <label for="question_id">
      Question
    </label>

    <%= select_tag(:question_id, options_from_collection_for_select(Question.all, :id, :question, @question_category.question_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="category_id">
      Category
    </label>

    <%= select_tag(:category_id, options_from_collection_for_select(Category.all, :id, :category_name, @question_category.category_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update question category
  </button>
</form>

<hr>

<a href="/question_categories">
  Go back
</a>

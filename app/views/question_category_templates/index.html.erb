<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All question categories
    </h1>

    <a href="/question_categories/new" class="btn btn-block btn-outline-secondary">
      Add a new question category
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "question_category_templates/question_categories_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Question
        </th>

        <th>
          Category
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @question_categories.each do |question_category| %>
      <tr>
        <!-- Display question_category.id start -->
        <td>
          <%= question_category.id %>
        </td>
        <!-- Display question_category.id end -->

        <!-- Display question_category.question_id start -->
        <td>
          <% if question_category.question.present? %>
            <a href="/questions/<%= question_category.question.id %>">
              <%= question_category.question.question %>
            </a>
          <% end %>
        </td>
        <!-- Display question_category.question_id end -->

        <!-- Display question_category.category_id start -->
        <td>
          <% if question_category.category.present? %>
            <a href="/categories/<%= question_category.category.id %>">
              <%= question_category.category.category_name %>
            </a>
          <% end %>
        </td>
        <!-- Display question_category.category_id end -->

        <!-- Display question_category.created_at start -->
        <td>
          <%= time_ago_in_words(question_category.created_at) %> ago
        </td>
        <!-- Display question_category.created_at end -->

        <!-- Display question_category.updated_at start -->
        <td>
          <%= time_ago_in_words(question_category.updated_at) %> ago
        </td>
        <!-- Display question_category.updated_at end -->

        <td>
          <a href="/question_categories/<%= question_category.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @question_categories, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

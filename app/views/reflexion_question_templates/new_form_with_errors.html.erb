<% if @reflexion_question.present? %>
  <% if @reflexion_question.errors.any? %>
    <% @reflexion_question.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new reflexion question
</h1>


<hr>

<form action="/create_reflexion_question" method="post">

  <div class="form-group">
    <label for="question_id">
      Question
    </label>

    <%= select_tag(:question_id, options_from_collection_for_select(Question.all, :id, :question, @reflexion_question.question_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="reflexion_question">
      Reflexion question
    </label>

    <input type="text" id="reflexion_question" name="reflexion_question" class="form-control" value="<%= @reflexion_question.reflexion_question %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create reflexion question
  </button>
</form>

<hr>

<a href="/reflexion_questions">
  Go back
</a>

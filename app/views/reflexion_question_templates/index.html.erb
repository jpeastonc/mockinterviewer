<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All reflexion questions
    </h1>

    <a href="/reflexion_questions/new" class="btn btn-block btn-outline-secondary">
      Add a new reflexion question
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Question
        </th>

        <th>
          Reflexion question
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @reflexion_questions.each do |reflexion_question| %>
      <tr>
        <!-- Display reflexion_question.id start -->
        <td>
          <%= reflexion_question.id %>
        </td>
        <!-- Display reflexion_question.id end -->

        <!-- Display reflexion_question.question_id start -->
        <td>
          <% if reflexion_question.question.present? %>
            <a href="/questions/<%= reflexion_question.question.id %>">
              <%= reflexion_question.question.question %>
            </a>
          <% end %>
        </td>
        <!-- Display reflexion_question.question_id end -->

        <!-- Display reflexion_question.reflexion_question start -->
        <td>
          <%= reflexion_question.reflexion_question %>
        </td>
        <!-- Display reflexion_question.reflexion_question end -->

        <!-- Display reflexion_question.created_at start -->
        <td>
          <%= time_ago_in_words(reflexion_question.created_at) %> ago
        </td>
        <!-- Display reflexion_question.created_at end -->

        <!-- Display reflexion_question.updated_at start -->
        <td>
          <%= time_ago_in_words(reflexion_question.updated_at) %> ago
        </td>
        <!-- Display reflexion_question.updated_at end -->

        <td>
          <a href="/reflexion_questions/<%= reflexion_question.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @reflexion_questions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

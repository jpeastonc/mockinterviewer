<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All evaluations
    </h1>

    <a href="/evaluations/new" class="btn btn-block btn-outline-secondary">
      Add a new evaluation
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Rating
        </th>

        <th>
          Comment
        </th>

        <th>
          User question
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @evaluations.each do |evaluation| %>
      <tr>
        <!-- Display evaluation.id start -->
        <td>
          <%= evaluation.id %>
        </td>
        <!-- Display evaluation.id end -->

        <!-- Display evaluation.rating start -->
        <td>
          <%= evaluation.rating %>
        </td>
        <!-- Display evaluation.rating end -->

        <!-- Display evaluation.comment start -->
        <td>
          <%= evaluation.comment %>
        </td>
        <!-- Display evaluation.comment end -->

        <!-- Display evaluation.user_question_id start -->
        <td>
          <%= evaluation.user_question.user_id %>
        </td>
        <!-- Display evaluation.user_question_id end -->

        <!-- Display evaluation.created_at start -->
        <td>
          <%= time_ago_in_words(evaluation.created_at) %> ago
        </td>
        <!-- Display evaluation.created_at end -->

        <!-- Display evaluation.updated_at start -->
        <td>
          <%= time_ago_in_words(evaluation.updated_at) %> ago
        </td>
        <!-- Display evaluation.updated_at end -->

        <td>
          <a href="/evaluations/<%= evaluation.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<h1>
  Edit evaluation #<%= @evaluation.id %>
</h1>

<hr>

<form action="/update_evaluation/<%= @evaluation.id %>" method="post">

  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <input type="text" id="rating" name="rating" class="form-control" value="<%= @evaluation.rating %>">
  </div>

  <div class="form-group">
    <label for="comment">
      Comment
    </label>

    <input type="text" id="comment" name="comment" class="form-control" value="<%= @evaluation.comment %>">
  </div>

  <div class="form-group">
    <label for="user_question_id">
      User question
    </label>

    <%= select_tag(:user_question_id, options_from_collection_for_select(UserQuestion.all, :id, :user_id, @evaluation.user_question_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update evaluation
  </button>
</form>

<hr>

<a href="/evaluations">
  Go back
</a>

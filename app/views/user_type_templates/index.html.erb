<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All user types
    </h1>

    <a href="/user_types/new" class="btn btn-block btn-outline-secondary">
      Add a new user type
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @user_types.each do |user_type| %>
      <tr>
        <!-- Display user_type.id start -->
        <td>
          <%= user_type.id %>
        </td>
        <!-- Display user_type.id end -->

        <!-- Display user_type.name start -->
        <td>
          <%= user_type.name %>
        </td>
        <!-- Display user_type.name end -->

        <!-- Display user_type.created_at start -->
        <td>
          <%= time_ago_in_words(user_type.created_at) %> ago
        </td>
        <!-- Display user_type.created_at end -->

        <!-- Display user_type.updated_at start -->
        <td>
          <%= time_ago_in_words(user_type.updated_at) %> ago
        </td>
        <!-- Display user_type.updated_at end -->

        <td>
          <a href="/user_types/<%= user_type.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @user_types, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

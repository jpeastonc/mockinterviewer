<!-- Validation failure messages -->
<% if @user_type.present? %>
  <% if @user_type.errors.any? %>
    <% @user_type.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new user type
</h1>


<hr>

<!-- Form user_type start -->
<form action="/create_user_type" method="post">
<!-- Form user_type end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @user_type.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Create user type
  </button>
</form>

<hr>

<a href="/user_types">
  Go back
</a>

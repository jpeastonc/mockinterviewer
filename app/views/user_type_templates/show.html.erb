<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      User type #<%= @user_type.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/user_types" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/user_types/<%= @user_type.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit user type
        </a>
      </div>

      <div class="col">
        <a href="/delete_user_type/<%= @user_type.id %>" class="btn btn-block btn-outline-secondary">
          Delete user type
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @user_type.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@user_type.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@user_type.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "user_type_templates/user_type_users" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Question tip #<%= @question_tip.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/question_tips" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/question_tips/<%= @question_tip.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit question tip
        </a>
      </div>

      <div class="col">
        <a href="/delete_question_tip/<%= @question_tip.id %>" class="btn btn-block btn-outline-secondary">
          Delete question tip
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Question
      </dt>
      <dd>
        <% if @question_tip.question.present? %>
          <a href="/questions/<%= @question_tip.question_id %>">
            <%= @question_tip.question.question %>
          </a>
        <% end %>
      </dd>

      <dt>
        Content
      </dt>
      <dd>
        <%= @question_tip.content %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@question_tip.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@question_tip.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>


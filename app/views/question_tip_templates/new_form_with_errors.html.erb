<!-- Validation failure messages -->
<% if @question_tip.present? %>
  <% if @question_tip.errors.any? %>
    <% @question_tip.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new question tip
</h1>


<hr>

<!-- Form question_tip start -->
<form action="/create_question_tip" method="post">
<!-- Form question_tip end -->

  <!-- Label and input for question_id start -->
  <div class="form-group">
    <label for="question_id">
      Question
    </label>

    <!-- Input for question_id start -->
    <input type="text" id="question_id" name="question_id" class="form-control" value="<%= @question_tip.question_id %>">
    <!-- Input for question_id end -->
  </div>
  <!-- Label and input for question_id end -->

  <!-- Label and input for content start -->
  <div class="form-group">
    <label for="content">
      Content
    </label>

    <!-- Input for content start -->
    <input type="text" id="content" name="content" class="form-control" value="<%= @question_tip.content %>">
    <!-- Input for content end -->
  </div>
  <!-- Label and input for content end -->

  <button class="btn btn-block btn-outline-secondary">
    Create question tip
  </button>
</form>

<hr>

<a href="/question_tips">
  Go back
</a>

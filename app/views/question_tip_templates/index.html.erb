<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Question
        </th>

        <th>
          Content
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @question_tips.each do |question_tip| %>
      <tr>
        <!-- Display question_tip.id start -->
        <td>
          <%= question_tip.id %>
        </td>
        <!-- Display question_tip.id end -->

        <!-- Display question_tip.question_id start -->
        <td>
          <%= question_tip.question_id %>
        </td>
        <!-- Display question_tip.question_id end -->

        <!-- Display question_tip.content start -->
        <td>
          <%= question_tip.content %>
        </td>
        <!-- Display question_tip.content end -->

        <!-- Display question_tip.created_at start -->
        <td>
          <%= time_ago_in_words(question_tip.created_at) %> ago
        </td>
        <!-- Display question_tip.created_at end -->

        <!-- Display question_tip.updated_at start -->
        <td>
          <%= time_ago_in_words(question_tip.updated_at) %> ago
        </td>
        <!-- Display question_tip.updated_at end -->

        <td>
          <a href="/question_tips/<%= question_tip.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
